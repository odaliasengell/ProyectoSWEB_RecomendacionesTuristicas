# Configuraci√≥n del API Gateway WebSocket

# Puerto del servidor
PORT=4001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT
JWT_SECRET=tu-secreto-super-seguro-websocket-2024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_WEBSOCKET_MAX=10
RATE_LIMIT_NOTIFICATIONS_MAX=30
RATE_LIMIT_PROXY_MAX=60

# Load Balancer
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=5000

# Servicios
TYPESCRIPT_SERVICE_URL=http://localhost:3000
PYTHON_SERVICE_URL=http://localhost:8000
GOLANG_SERVICE_URL=http://localhost:8080

# Gateway Features
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_LOAD_BALANCING=true
ENABLE_REQUEST_TRANSFORMATION=true
ENABLE_RESPONSE_TRANSFORMATION=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true