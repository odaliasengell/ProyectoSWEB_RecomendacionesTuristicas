{
  "name": "Payment Handler",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "payment",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-payment",
      "name": "Webhook Payment",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1.1,
      "position": [250, 300],
      "webhookId": "payment-handler"
    },
    {
      "parameters": {
        "jsCode": "// Obtener los datos del webhook\nconst payload = $input.item.json.body || $input.item.json;\n\n// Campos requeridos para un pago válido\nconst requiredFields = ['event_type', 'payment_id'];\n\n// Verificar si faltan campos\nconst missingFields = requiredFields.filter(field => !payload[field]);\n\n// Si faltan campos, retorna error\nif (missingFields.length > 0) {\n  return {\n    json: {\n      valid: false,\n      error: `Faltan campos obligatorios: ${missingFields.join(', ')}`,\n      ...payload\n    }\n  };\n}\n\n// Todo está bien, retorna los datos completos\nreturn {\n  json: {\n    valid: true,\n    ...payload\n  }\n};"
      },
      "id": "validate-payload",
      "name": "Validar Payload",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [470, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.event_type }}",
              "value2": "payment.completed"
            }
          ]
        }
      },
      "id": "check-event-type",
      "name": "¿Pago Completado?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [690, 200]
    },
    {
      "parameters": {
        "method": "PUT",
        "url": "=http://localhost:8000/reservas/{{ $json.metadata.reserva_id || $json.metadata.tour_id }}/activar",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "payment_id",
              "value": "={{ $json.payment_id }}"
            },
            {
              "name": "status",
              "value": "confirmada"
            }
          ]
        },
        "options": {}
      },
      "id": "activate-reservation",
      "name": "Activar Reserva/Servicio",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [910, 100],
      "continueOnFail": true
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=http://localhost:8080/notify",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"event\": \"payment_confirmed\",\n  \"user_id\": \"{{ $json.metadata.user_id }}\",\n  \"data\": {\n    \"payment_id\": \"{{ $json.payment_id }}\",\n    \"amount\": {{ $json.amount }},\n    \"message\": \"Tu pago ha sido confirmado exitosamente\"\n  }\n}",
        "options": {}
      },
      "id": "notify-websocket",
      "name": "Notificar WebSocket",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1130, 100],
      "continueOnFail": true
    },
    {
      "parameters": {
        "authentication": "genericCredentialType",
        "genericAuthType": "httpBasicAuth",
        "fromEmail": "={{ $env.SMTP_USER || 'tu-email@gmail.com' }}",
        "toEmail": "={{ $json.metadata.user_email }}",
        "subject": "Confirmacion de Pago - Turismo Recomendaciones",
        "emailType": "html",
        "message": "=<html>\n<body style=\"font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;\">\n  <div style=\"background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px; text-align: center;\">\n    <h1 style=\"color: white; margin: 0;\">Pago Confirmado</h1>\n  </div>\n  \n  <div style=\"padding: 30px; background: #f9fafb;\">\n    <h2 style=\"color: #374151;\">Detalles de tu pago</h2>\n    \n    <div style=\"background: white; padding: 20px; border-radius: 8px; margin: 20px 0;\">\n      <p><strong>ID de Pago:</strong> {{ $json.payment_id }}</p>\n      <p><strong>Monto:</strong> ${{ $json.amount }} {{ $json.currency }}</p>\n      <p><strong>Tour/Servicio:</strong> {{ $json.metadata.tour_nombre || $json.metadata.servicio_nombre || 'N/A' }}</p>\n      <p><strong>Fecha:</strong> {{ $now.format('DD/MM/YYYY HH:mm') }}</p>\n    </div>\n    \n    <p style=\"color: #6b7280;\">Gracias por tu compra. Te contactaremos pronto con mas detalles.</p>\n    \n    <div style=\"text-align: center; margin-top: 30px;\">\n      <a href=\"http://localhost:5173/mis-reservas\" style=\"background: #10b981; color: white; padding: 12px 24px; text-decoration: none; border-radius: 6px;\">Ver Mis Reservas</a>\n    </div>\n  </div>\n  \n  <div style=\"padding: 20px; text-align: center; color: #9ca3af; font-size: 12px;\">\n    <p>Sistema de Recomendaciones Turisticas 2026</p>\n  </div>\n</body>\n</html>",
        "options": {
          "allowUnauthorizedCerts": true
        },
        "credentials": {
          "smtpBasicAuth": {
            "id": "1",
            "name": "Gmail SMTP"
          }
        }
      },
      "id": "send-email",
      "name": "Enviar Email Confirmacion",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [1350, 100],
      "continueOnFail": true
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=https://webhook.site/your-unique-url",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            },
            {
              "name": "X-Webhook-Source",
              "value": "turismo-recomendaciones"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"event_type\": \"payment.confirmed\",\n  \"timestamp\": \"{{ $now.toISO() }}\",\n  \"data\": {\n    \"payment_id\": \"{{ $json.payment_id }}\",\n    \"amount\": {{ $json.amount }},\n    \"currency\": \"{{ $json.currency }}\",\n    \"tour_id\": \"{{ $json.metadata.tour_id }}\",\n    \"reserva_id\": \"{{ $json.metadata.reserva_id }}\"\n  }\n}",
        "options": {
          "timeout": 10000
        }
      },
      "id": "webhook-partner",
      "name": "Webhook a Partner",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1570, 100],
      "continueOnFail": true
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"success\": true,\n  \"message\": \"Payment processed successfully\",\n  \"payment_id\": \"{{ $('Webhook Payment').item.json.payment_id }}\"\n}",
        "options": {
          "responseCode": 200
        }
      },
      "id": "response-success",
      "name": "Respuesta Exitosa",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1790, 100]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"success\": false,\n  \"error\": \"Invalid payload: missing required fields\",\n  \"details\": \"{{ $json.error }}\"\n}",
        "options": {
          "responseCode": 400
        }
      },
      "id": "response-error-validation",
      "name": "Error Validación",
      "type": "n8n-nodes-base.respondToWebhook",
