# AI Orchestrator - Servicio de IA Conversacional

Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=aiuser
DB_PASSWORD=aipassword
DB_NAME=ai_service

# LLM Provider
LLM_PROVIDER=gemini  # Options: gemini, openai
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# MongoDB (para logs y contexto de conversaciones)
MONGO_URI=mongodb://localhost:27017/ai_service

# Auth Service
AUTH_SERVICE_URL=http://localhost:3001

# REST API
REST_API_URL=http://localhost:8000

# Servicio
PORT=8002
ENVIRONMENT=development
LOG_LEVEL=info

# MCP Tools
ENABLE_MULTIMODAL=true
MAX_IMAGE_SIZE=10485760  # 10MB
SUPPORTED_FORMATS=jpg,jpeg,png,pdf,txt
